        <h2>Edit Book</h2>
<div class= "edit " id="center">
        <div id="edit">
            <form method="POST">
                
                <fieldset>
                <legend><strong>Edit Book</strong></legend>
                    <input type="hidden" value="{{data[0].bookID}}" id="bookID" name="bookID" required>
					
                    
                    <label>Title:</label> <input type="text" id="title" name="title" value="{{data[0].bookTitle}}" required>

                    <label>Author:</label> <input type="text" id="authorName" name="authorName" value="{{data[0].authorName}}" required>
					
					<label>ISBN:</label> <input type="text" id="isbn" name="isbn" pattern="\d*" maxlength="13" value="{{data[0].bookISBN}}" required>

                    <label>Publisher:</label> <input type="text" id="publisher" name="publisher" value="{{data[0].bookPublisher}}" >
					
					<label>Publisher Year:</label> <input type="text" id="year" name="year" value="{{data[0].bookYearPublished}}" >
					
					<label>Copies:</label> <input type="number" id="copies" name="copies" value="{{data[0].bookCopies}}" >
					
                    <input type="submit" value="Submit" name="edit_book" class="button";>

                    
            </form>
