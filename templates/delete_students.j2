<!--
    FORM FOR DELETING A STUDENT IN THE BOOK TABLE
--> 
<div id="center"> 
        <div class="" id="edit">
            <form method="post">
                
                <fieldset>
                <legend><strong>Delete Student</strong></legend>
                    <label>Are you sure you would like to delete this student from the database?</label>
                    
                    <input type="hidden" value="{{data[0].studentID}}" id="studentID" name="studentID" required>

                     <input type="hidden" id="First" name="First" value="{{data[0].studentFirstName}}" required>

                     <input type="hidden" id="Last" name="Last" value="{{data[0].studentLastName}}" required>

                     <input type="hidden" id="Email" name="Email" value="{{data[0].studentEmail}}" required>
                    <!-- submits the delete request-->
                    <input type="submit" value="Delete" name="delete_students" class="button";>
                    <!-- takes the user to the previous page-->
                    <a href='/students'><input class="btn" type="button" value="Cancel";"> </a>

                    
            </form>
