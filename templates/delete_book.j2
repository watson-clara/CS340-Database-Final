<!--
    FORM FOR DELETING A BOOK IN THE BOOK TABLE
-->
<div id="center"> 
        <div id="edit">
            <form method="POST">
               
                <fieldset> 
                <legend><strong>Delete Book</strong></legend>
                    <label>Are you sure you would like to delete this book from the database?</label>
                    
                    <div class="populate" value="{{data[0].bookTitle}}" > </div> 
                    <input type="hidden" value="{{data[0].bookID}}" id="bookID" name="bookID" required>
					
                    <input type="hidden" id="title" name="title" value="{{data[0].bookTitle}}" required>

                    <input type="hidden" id="authorID" name="authorID" value="{{data[0].authorID}}" required>
					
					<input type="hidden" id="isbn" name="isbn" pattern="\d*" maxlength="13" value="{{data[0].bookISBN}}" required>

                    <input type="hidden" id="publisher" name="publisher" value="{{data[0].bookPublisher}}" >
					
					<input type="hidden" id="year" name="year" value="{{data[0].bookYearPublished}}" >
					
					<input type="hidden" id="copies" name="copies" value="{{data[0].bookCopies}}" >
					<!-- submits the delete request-->
                    <input type="submit" value="Delete" name="delete_book" class="button";>
                    <!-- takes the user to the previous page-->
                    <a href='/students'><input class="btn" type="button" value="Cancel";"> </a>

                    
            </form>
